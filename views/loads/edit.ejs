<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Edit Load</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>

    <h1>Edit Load : <%= load.loadNumber %></h1>

    <form
      action="/users/<%= user._id %>/loads/<%= load._id %>?_method=PUT"
      method="POST"
    >
    
      <input type="hidden" name="loadNumber" value="<%= load.loadNumber %>" />    

      <label>📦 Broker Name</label>
      <input type="text" name="brokerName" value="<%= load.brokerName %>" required/>

      <label>📁 Confirmation Number</label>
      <input
        type="text"
        name="confirmationNumber"
        value="<%= load.confirmationNumber %>" required 
      />

      <br>
      <label>🏠 Pickup Date</label>
      <input
        type="date"
        name="pickupDate"
        value="<%= load.pickupDate.toISOString().split('T')[0] %>" required
      />

      <label> Pickup Location</label>
      <input
        type="text"
        name="pickupLocation"
        value="<%= load.pickupLocation %>" required
      />

      <label> Delivery Date</label>
      <input
        type="date"
        name="deliveryDate"
        value="<%= load.deliveryDate.toISOString().split('T')[0] %>" required
      />

      <label> Delivery Location</label>
      <input
        type="text"
        name="deliveryLocation"
        value="<%= load.deliveryLocation %>" required
      />
      <br>
      <div style="display: flex; align-items: flex-end; gap: 40px; margin-top: 20px;">
        <!-- Rate Field -->
        <div>
          <label>💵 Rate</label><br />
          <input type="number" name="rate" value="<%= load.rate %>" step="0.01" required />
        </div>
        <div>
          <label>💰 Payment Status</label><br />
          <input type="radio" id="notPaid" name="paymentStatus" value="notPaid" 
          <%= load.paymentStatus === 'notPaid' ? 'checked' : '' %> />
          <label for="notPaid">Not Paid</label>
      
          <input type="radio" id="paid" name="paymentStatus" value="paid" 
          <%= load.paymentStatus === 'paid' ? 'checked' : '' %> />
          <label for="paid">Paid</label>
        </div>
        <div>
          <label>📄 Broker Invoiced</label><br />
          <input type="radio" id="invoicedYes" name="invoiced" value="yes" 
          <%= load.invoiced === 'yes' ? 'checked' : '' %> />
          <label for="invoicedYes">Yes</label>
      
          <input type="radio" id="invoicedNo" name="invoiced" value="no" 
          <%= load.invoiced === 'no' ? 'checked' : '' %> />
          <label for="invoicedNo">No</label>
        </div>
      </div>
      <br />

      <label>Contacted Date</label>
      <input type="date" name="contactedDate" value="<%= load.contactedDate ? load.contactedDate.toISOString().split('T')[0] : '' %>" />

      <label>Invoiced Date</label>
      <input type="date" name="invoicedDate" value="<%= load.invoicedDate ? load.invoicedDate.toISOString().split('T')[0] : '' %>" />

      <label>Payment Due</label>
      <input type="date" name="pmtTerms" value="<%= load.pmtTerms ? load.pmtTerms.toISOString().split('T')[0] : '' %>" />
        <br>
        <br>

        <label>📝 Notes</label>
        <textarea name="notes"><%= load.notes %></textarea>
        <br />
      <br />
      <button type="submit">Update Item</button>
    </form>
  </body>
</html>
